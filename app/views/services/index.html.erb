<h1>Services</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Identifier</th>
      <th colspan="2"></th>
      <th class="text-right"><%= link_to 'New Service', new_service_path %></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.identifier %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <th colspan="4"></th>
    <th class="text-right"><%= link_to 'New Service', new_service_path %></th>
  </tbody>
</table>

