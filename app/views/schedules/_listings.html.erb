<div class="orbit" role="region" aria-label="Schedule Listing" data-orbit>
  <ul class="orbit-container">
    <button class="orbit-previous" aria-label="previous"><span class="show-for-sr">Previous Slide</span>&#9664;</button>
    <button class="orbit-next" aria-label="next"><span class="show-for-sr">Next Slide</span>&#9654;</button>
  
  <% number_of_listings_slides.times do |slide| %>
    <%= render 'schedules/listings_headers', slide: slide %>
  <% end %>

  </ul>

  <nav class="orbit-bullets">
    <% number_of_listings_slides.times do |slide| %>
      <button data-slide=<%= slide %>><span class="show-for-sr">Slide number <%= slide %></span></button>
      <% if slide == 0 %>
        <span class="show-for-sr">Current Slide</span></button>
      <% end%>
    <% end %>
  </nav>

</div>


